{
    "imports": {
        "@/": "./",
        "@std/cli/parse-args": "jsr:@std/cli@1.0.21/parse-args",
        "@std/log": "jsr:@std/log@^0.224.14",
        "@std/crypto": "jsr:@std/crypto@^1.0.5",
        "@oak/oak": "jsr:@oak/oak@^17.2.0",
        "@std/testing": "jsr:@std/testing@^1.0.16",
        "@std/assert": "jsr:@std/assert@^1.0.16",
        "@std/testing/bdd": "jsr:@std/testing@^0.225.3/bdd",
        "@oak/oak/testing": "jsr:@oak/oak@^17.2.0/testing",
        "npm:lodash": "npm:lodash@^4.17.21",
        "npm:nunjucks": "npm:nunjucks@^3.2.4"
    },
    "fmt": {
        "exclude": [".github", "*.md"],
        "indentWidth": 4,
        "useTabs": false,
        "semiColons": true,
        "singleQuote": false,
        "spaceSurroundingProperties": true,
        "operatorPosition": "maintain",
        "lineWidth": 125,
        "proseWrap": "always",
        "trailingCommas": "never",
        "typeLiteral.separatorKind": "comma",
        "quoteProps": "consistent"
    },
    "test": {
        "include": ["tests/**/*.test.ts"]
    },
    "tasks": {
        "start": "deno run --allow-net --allow-read --allow-env src/server.ts",
        "test": "deno test --allow-net --allow-read --allow-env --coverage=coverage"
    }
}
